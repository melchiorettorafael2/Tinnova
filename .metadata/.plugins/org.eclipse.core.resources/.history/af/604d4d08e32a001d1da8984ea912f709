package application;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int aux = 1;
		int i = 0;
		int soma=0;

		int num = Integer.parseInt(JOptionPane.showInputDialog("Digite um n√∫mero inteiro"));

		while (i < num) {
			if (num % 3 == 0 && num % 5 == 0) {
				soma+=num;
			}
			num--;

		}
	}

}
